{
  "manifest_version": 2,

  "name": "Download Router",
  "short_name": "DL Router",
  "description": "Allows you to route your downloads to custom target folders.",
  "version": "0.0.3",
  "background": {
    "scripts": [
      "js/background.js",
      "js/jquery-2.1.1.min.js",
      "js/dbHelper.js",
      "js/downloadEvent.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
    },

  "options_page": "options.html",

  "content_scripts": [{
    "js": [
      "js/jquery-2.1.1.min.js",
      "js/bootstrap.min.js",
      "js/routeListHelper.js",
      "js/dbHelper.js",
      "js/options.js",
      "js/growl/javascripts/jquery.growl.js",
      "js/simplemodal/js/jquery.simplemodal.js",
      "js/simplemodal/js/basic.js"
    ],
    "matches": ["http://*/*", "https://*/*"]
  }],

  "author": "Kristofer Jarl",

  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "notifications",
    "https://maxcdn.bootstrapcdn.com/",
    "https://code.jquery.com/"
  ],
  "browser_action": {
    "default_icon": "./img/icon.png"
  }
}